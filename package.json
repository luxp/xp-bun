{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.tsx",
    "dev:debug": "bun --inspect --hot src/index.tsx",
    "debug": "bun --inspect src/index.tsx",
    "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/index.tsx",
    "test": "bun test",
    "test:debug": "bun test --inspect"
  },
  "dependencies": {
    "@google/genai": "^1.25.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "antd": "^5.27.5",
    "canvas": "^3.2.0",
    "dayjs": "^1.11.18",
    "fluent-ffmpeg": "^2.1.3",
    "minimist": "^1.2.8",
    "react": "^19",
    "react-dom": "^19",
    "react-router": "^7.9.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/minimist": "^1.2.5",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}
