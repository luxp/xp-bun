{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Bun Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.tsx",
      "runtimeExecutable": "bun",
      "runtimeArgs": [
        "--inspect"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "name": "Debug Bun Server (Hot Reload)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.tsx",
      "runtimeExecutable": "bun",
      "runtimeArgs": [
        "--inspect",
        "--hot"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "name": "Debug Bun Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/bun",
      "args": [
        "test",
        "--inspect"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true
    },
    {
      "name": "Debug Bun Script",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/worker/remove-veo.ts",
      "runtimeExecutable": "bun",
      "runtimeArgs": [
        "--inspect"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true
    }
  ]
}